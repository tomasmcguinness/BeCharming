<Page
    x:Class="BeCharming.Metro.ShareTargets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ShareTargetTemplate">
            <Border HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SubheaderTextStyle}" />
                    <TextBlock Text="{Binding IP}" Style="{StaticResource SubheaderTextStyle}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding Path=Targets}" SelectedItem="{Binding Path=SelectedTarget}" ItemTemplate="{StaticResource ShareTargetTemplate}" IsItemClickEnabled="True" ItemClick="ListView_ItemClick" SelectionMode="None" />
    </Grid>
</Page> 