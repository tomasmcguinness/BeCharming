    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" FontFamily="Segoe UI" FontSize="42" Margin="10" Foreground="Red">Be Charming</TextBlock>
    <ListBox  Name="listBox1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" BorderThickness="0" Width="479" />
